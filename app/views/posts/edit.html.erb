<%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>

  <h4>動物名</h4>
  <%= f.text_field :animal_name %>

  <h4>本文</h4>
  <%= f.text_area :caption %>

  <%= f.submit '保存' %>


<% end %>